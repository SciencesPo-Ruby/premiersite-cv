<p id="notice"><%= notice %></p>

<h1>Educations</h1>

<table>
  <thead>
    <tr>
      <th>Date debut</th>
      <th>Date fin</th>
      <th>Titre</th>
      <th>Institution</th>
      <th>Description</th>
      <th>Lieu</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @educations.each do |education| %>
      <tr>
        <td><%= education.date_debut %></td>
        <td><%= education.date_fin %></td>
        <td><%= education.titre %></td>
        <td><%= education.institution %></td>
        <td><%= education.description %></td>
        <td><%= education.lieu %></td>
        <td><%= link_to 'Show', education %></td>
        <td><%= link_to 'Edit', edit_education_path(education) %></td>
        <td><%= link_to 'Destroy', education, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

